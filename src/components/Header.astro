---
import { Image } from "astro:assets";
import LinkedinIcon from "../assets/linkedin.svg";
import LinkedinIconDark from "../assets/linkedin-dark.svg";
import GithubIcon from "../assets/github.svg";
import GithubIconDark from "../assets/github-dark.svg";
import Sparkles from "../assets/sparkles.svg";
import SparklesDark from "../assets/sparkles-dark.svg";
import Mail from "../assets/mail.svg";
import MailDark from "../assets/mail-dark.svg";
import { DarkModeToggle } from "../components/DarkModeToggle";
---

<!-- TODO: find svg github icon also need to match the border radiuses on the corners and colors --><!-- TODO: add favicon and ogimage -->
<header class="w-full sticky top-0 left-0 p-4 border-b bg-white z-10">
    <nav class="flex flex-row justify-between">
        <a
            href="/"
            class="flex flex-row items-center gap-2 md:hidden group hover:scale-110 transition-transform ease-in-out duration-300"
        >
            <Image
                src={Sparkles}
                height="16"
                width="16"
                alt="logo"
                loading="eager"
                class="dark:hidden"
            />
            <Image
                src={SparklesDark}
                height="16"
                width="16"
                alt="logo"
                loading="eager"
                class="hidden dark:block"
            />
            <p class="font-heading font-semibold">Edward New</p>
        </a>

        <ul class="hidden md:flex flex-row gap-8 items-center">
            <li class="me-4">
                <a
                    href="/"
                    class="flex flex-row items-center gap-2 group hover:scale-110 transition-transform ease-in-out duration-300"
                >
                    <Image
                        src={Sparkles}
                        height="16"
                        width="16"
                        alt="logo"
                        loading="eager"
                        class="dark:hidden"
                    />
                    <Image
                        src={SparklesDark}
                        height="16"
                        width="16"
                        alt="logo"
                        loading="eager"
                        class="hidden dark:block"
                    />
                    <p class="font-heading font-semibold">Edward New</p>
                </a>
            </li>

            <li>
                <a href="/projects" class="hover:underline underline-offset-2"
                    ><p>Projects</p></a
                >
            </li>
            <li>
                <a href="/about" class="hover:underline underline-offset-2"
                    ><p>About</p></a
                >
            </li>
            <li>
                <a
                    href="/resume.pdf"
                    target="_blank"
                    class="hover:underline underline-offset-2"><p>Resume</p></a
                >
            </li>
        </ul>

        <ul class="flex flex-row items-center gap-2">
            <span
                class="flex gap-2 after:w-px after:h-6 after:bg-gray-300 after:block"
            >
                <DarkModeToggle client:load />
            </span>

            <li>
                <a
                    href="https://www.linkedin.com/in/edward-new/"
                    target="_blank"
                >
                    <Image
                        src={LinkedinIcon}
                        height="26"
                        width="26"
                        alt="Linkedin"
                        loading="eager"
                        class="rounded hover:scale-110 transition-transform dark:hidden"
                    />
                    <Image
                        src={LinkedinIconDark}
                        height="26"
                        width="26"
                        alt="Linkedin"
                        loading="eager"
                        class="rounded hover:scale-110 transition-transform hidden dark:block"
                    />
                </a>
            </li>
            <li>
                <a href="https://github.com/EdwardNew" target="_blank">
                    <Image
                        src={GithubIcon}
                        height="26"
                        width="26"
                        alt="Github"
                        loading="eager"
                        class="rounded hover:scale-110 transition-transform dark:hidden"
                    />
                    <Image
                        src={GithubIconDark}
                        height="26"
                        width="26"
                        alt="Github"
                        loading="eager"
                        class="rounded hover:scale-110 transition-transform hidden dark:block"
                    />
                </a>
            </li>
            <li class="hidden md:block">
                <a href="mailto:edwardznew@gmail.com" target="_blank">
                    <Image
                        src={Mail}
                        height="26"
                        width="26"
                        alt="Mail"
                        loading="eager"
                        class="rounded hover:scale-110 transition-transform dark:hidden"
                    />
                    <Image
                        src={MailDark}
                        height="26"
                        width="26"
                        alt="Mail"
                        loading="eager"
                        class="rounded hover:scale-110 transition-transform hidden dark:block"
                    />
                </a>
            </li>
        </ul>
    </nav>
</header>

<style>
    header,
    footer,
    body,
    section {
        @apply bg-white dark:bg-neutral-800 text-black dark:text-white dark:border-neutral-600;
    }
</style>
